@model MPersonne;


<h1 class="titreMain">Modifier une entrée</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Enregistrer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idPersonne" class="control-label"  hidden></label>
                <input asp-for="idPersonne" class="form-control" value="@Model.idPersonne" hidden />
                <span asp-validation-for="idPersonne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nomPersonne" class="control-label"></label>
                <input asp-for="nomPersonne" class="form-control" />
                <span asp-validation-for="nomPersonne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prenomPersonne" class="control-label"></label>
                <input asp-for="prenomPersonne" class="form-control" />
                <span asp-validation-for="prenomPersonne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mdp" class="control-label"></label>
                <input asp-for="mdp" class="form-control" type="password" />
                <span asp-validation-for="mdp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Personne">Revenir à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
